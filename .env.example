# Environment Variables Template
# Copy this file to .env and fill in the values

# ============================================
# Remote Server Configuration
# ============================================
REMOTE_HOST=211.231.121.68
REMOTE_PORT=22225
REMOTE_USER=lanco
REMOTE_PASSWORD=<your_password>

# ============================================
# Hugging Face
# ============================================
HF_TOKEN=<your_huggingface_token>
HF_HOME=./cache/huggingface

# ============================================
# Local GPU Docker (CDI mode)
# ============================================
DOCKER_GPU_FLAG="--device nvidia.com/gpu=all"

# ============================================
# Service Ports
# ============================================
# Local services (GPU)
LOCAL_LLM_PORT=8000
LOCAL_EMBEDDING_PORT=8001

# Remote services (Non-GPU)
REMOTE_VECTORDB_PORT=8080
REMOTE_RAG_API_PORT=8081
REMOTE_UI_PORT=7860

# ============================================
# Model Settings
# ============================================
LLM_MODEL=Qwen/Qwen2.5-7B-Instruct
EMBEDDING_MODEL=BAAI/bge-m3

# ============================================
# Vector DB
# ============================================
CHROMA_PERSIST_DIR=./data/embeddings/chroma
CHROMA_COLLECTION=korean_legal_docs

# ============================================
# API Keys (Optional)
# ============================================
# OPENAI_API_KEY=<your_openai_key>
# ANTHROPIC_API_KEY=<your_anthropic_key>

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
